{
    "name": "enzolutions/spress-tinto-theme",
    "type": "spress-theme",
    "description": "Tinto theme for Spress",
    "keywords": ["html5", "css3", "responsive", "template", "spress"],
    "license": "MIT",
    "authors": [
        {
            "name": "enzo - Eduardo Garcia",
            "email": "enzo@enzolutions.com",
            "homepage": "http://enzolutions.com"
        }
    ],
    "require": {
        "yosymfony/spress-installer": "2.0.*@dev"
    },
    "config": {
        "vendor-dir": "_plugins/vendors"
    },
    "scripts": {
        "site:build": "scripts/build_site",
        "site:serve": "scripts/serve_site",
        "site:stop-server": "docker stop -t 0 lebenplusplus",
        "site:sync": "rsync -v --recursive --times --delete --prune-empty-dirs build/ gbprivat@gienah.uberspace.de:lebenplusplus.de/",
        "site:update": [ "@site:build", "@site:sync" ]
    },
    "extra": {
        "spress_name": "tinto",
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    }
}
